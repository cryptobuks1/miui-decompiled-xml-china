<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavigationLayout" parent="@miui:style/Widget.NavigationLayout">
        <item name="miui:drawerEnabledOrientation">portrait</item>
    </style>
    <style name="Theme" parent="@miui:style/Theme.Light">
        <item name="miui:navigationLayoutStyle">@style/NavigationLayout</item>
        <item name="miui:contentAutoFitSystemWindow">true</item>
    </style>
    <style name="Theme.Immersion" parent="@style/Theme">
        <item name="miui:immersionMenuEnabled">true</item>
    </style>
    <style name="ActionBar.Main" parent="@miui:style/Widget.ActionBar">
        <item name="android:displayOptions">none</item>
    </style>
    <style name="Theme.Immersion.Main" parent="@style/Theme.Immersion">
        <item name="android:actionBarStyle">@style/ActionBar.Main</item>
    </style>
    <style name="Theme.Light" parent="@miui:style/Theme.Light" />
    <style name="Theme.Dialog" parent="@miui:style/Theme.Light.Dialog" />
    <style name="Theme.Light.TopTransparent" parent="@miui:style/Theme.Light">
        <item name="android:windowBackground">@drawable/window_bg_transparent_top</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="Theme.Transparent" parent="@miui:style/Theme.Light">
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="miui:windowActionBar">false</item>
    </style>
    <style name="AnimBottom" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>
    <style name="Theme.Transparent.Popup" parent="@style/Theme.Transparent">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
    </style>
    <style name="AppTheme" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColorLink">#ff4f9ad9</item>
    </style>
    <style name="pullToRefreshProg">
        <item name="android:background">@null</item>
        <item name="android:maxWidth">21.329987dip</item>
        <item name="android:maxHeight">21.329987dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/pull_to_refresh_progress</item>
        <item name="android:progressDrawable">@drawable/pull_to_refresh_progress</item>
        <item name="android:minWidth">21.329987dip</item>
        <item name="android:minHeight">21.329987dip</item>
    </style>
    <style name="pullToRefreshProgLight">
        <item name="android:background">@null</item>
        <item name="android:maxWidth">21.329987dip</item>
        <item name="android:maxHeight">21.329987dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/pull_to_refresh_progress_light</item>
        <item name="android:progressDrawable">@drawable/pull_to_refresh_progress_light</item>
        <item name="android:minWidth">21.329987dip</item>
        <item name="android:minHeight">21.329987dip</item>
    </style>
    <style name="TextAppearance.ShareItem" parent="@miui:style/TextAppearance.List.Secondary">
        <item name="android:textColor">@color/list_secondary_text_light</item>
    </style>
    <style name="ShortcutDialog" parent="@miui:style/Theme.Light.Dialog">
        <item name="android:backgroundDimAmount">0.82</item>
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
