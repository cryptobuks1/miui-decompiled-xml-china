<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@miui:style/Theme.Light" />
    <style name="TextAppearanceButton">
        <item name="android:textSize">17.099976sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="TextAppearancePrimary">
        <item name="android:textSize">13.099976sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="TextAppearanceSecondary">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#aaffffff</item>
    </style>
    <style name="Theme.MainView" parent="@miui:style/Theme.Light.NoTitle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="Theme.Settings" parent="@miui:style/Theme.Light.Settings">
        <item name="android:windowAnimationStyle">@style/without_anim</item>
    </style>
    <style name="Theme.Tutorial" parent="@miui:style/Theme.Light.NoTitle">
        <item name="android:windowAnimationStyle">@style/without_anim</item>
    </style>
    <style name="Theme.UserGuide" parent="@miui:style/Theme.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/without_anim</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="miui:windowActionBar">false</item>
        <item name="miui:windowActionBarOverlay">false</item>
    </style>
    <style name="drivemode_desc_huge">
        <item name="android:textSize">13.099976sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ccffffff</item>
    </style>
    <style name="drivemode_handle_return_to_voice">
        <item name="android:textSize">13.089996sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="drivemode_title_huge">
        <item name="android:textSize">18.199982sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="drivemode_tutorial_title_text">
        <item name="android:textSize">13.099976sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="drivemode_warning_text">
        <item name="android:textSize">13.099976sp</item>
        <item name="android:textColor">#99ffffff</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    <style name="fade_anim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/drive_mode_enter_mask</item>
        <item name="android:windowExitAnimation">@anim/drive_mode_exit_mask</item>
    </style>
    <style name="mask_extra_hint_text">
        <item name="android:textSize">50.0px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ccffffff</item>
        <item name="android:lineSpacingMultiplier">1.8</item>
    </style>
    <style name="tutorial_subtitle_page_start">
        <item name="android:textSize">18.199982sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#99000000</item>
    </style>
    <style name="tutorial_title_page_middle">
        <item name="android:textSize">@dimen/tutorial_title_page_middle_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff000000</item>
    </style>
    <style name="tutorial_title_page_start">
        <item name="android:textSize">30.5sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff000000</item>
    </style>
    <style name="tutorial_warning_text_page_last">
        <item name="android:textSize">@dimen/tutorial_last_page_warning_desc_font_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#66000000</item>
        <item name="android:lineSpacingMultiplier">1.26</item>
    </style>
    <style name="without_anim">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>
</resources>
