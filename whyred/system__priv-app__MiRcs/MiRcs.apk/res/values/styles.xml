<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="Theme.Light.Dialog" parent="@miui:style/Theme.Light.Dialog" />
    <style name="AppDialogTheme" parent="@android:style/Theme.Holo.Dialog.NoActionBar.MinWidth">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    <style name="Theme.Light" parent="@miui:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Theme.Light.Title" parent="@miui:style/Theme.Light" />
    <style name="TextAppearance.List.Primary" parent="@miui:style/TextAppearance.List.Primary" />
    <style name="TextAppearance.List.Primary.Highlight" parent="@style/TextAppearance.List.Primary">
        <item name="android:textColor">@color/highlight_text</item>
        <item name="android:textColorLink">@color/highlight_text</item>
    </style>
    <style name="TextAppearance.List.Primary.Normal" parent="@style/TextAppearance.List.Primary">
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextAppearance.List.Primary.Normal.Grey" parent="@style/TextAppearance.List.Primary.Normal">
        <item name="android:textColor">@miui:color/secondary_text_light</item>
    </style>
    <style name="TextAppearance.List.Secondary" parent="@miui:style/TextAppearance.List.Secondary" />
    <style name="TextAppearance.List.Secondary.Highlight" parent="@style/TextAppearance.List.Secondary">
        <item name="android:textColor">@color/highlight_text</item>
        <item name="android:textColorLink">@color/highlight_text</item>
    </style>
    <style name="TextAppearance.List.Secondary.Black" parent="@style/TextAppearance.List.Secondary">
        <item name="android:textColor">@miui:color/primary_text_light</item>
    </style>
    <style name="TextAppearance.List.Secondary.Black.Highlight" parent="@style/TextAppearance.List.Secondary.Black">
        <item name="android:textColor">@color/highlight_text</item>
    </style>
    <style name="TextAppearance.List.Secondary.White" parent="@style/TextAppearance.List.Secondary">
        <item name="android:textColor">@miui:color/primary_text_dark</item>
    </style>
    <style name="TextAppearance.List.Secondary.Grey" parent="@style/TextAppearance.List.Secondary">
        <item name="android:textColor">@miui:color/secondary_text_light</item>
    </style>
    <style name="TextAppearance.List.EmptyView" parent="@miui:style/TextAppearance.BlankPage" />
    <style name="RCS.TextAppearance.List.DoubleLine.Primary" parent="@miui:style/TextAppearance.List.Primary">
        <item name="android:singleLine">true</item>
    </style>
    <style name="RCS.TextAppearance.List.DoubleLine.Secondary" parent="@miui:style/TextAppearance.List.Secondary">
        <item name="android:singleLine">true</item>
    </style>
    <style name="RCS.TextAppearance.List.DoubleLine.SecondaryMultiLine" parent="@miui:style/TextAppearance.List.Secondary">
        <item name="android:singleLine">false</item>
    </style>
    <style name="RCS.Theme.ActionBar.WithMenu" parent="@miui:style/Theme.Light">
        <item name="miui:immersionMenuEnabled">true</item>
    </style>
    <style name="RCS.Widget" parent="@miui:style/Widget" />
    <style name="RCS.Widget.Button" parent="@miui:style/Widget.Button" />
    <style name="RCS.Widget.ImageView" parent="@style/RCS.Widget" />
    <style name="RCS.Widget.ImageView.Detail" parent="@style/RCS.Widget.ImageView">
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="RCS.Widget.ImageView.Thumbnail" parent="@style/RCS.Widget.ImageView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">@dimen/thumbnail_size</item>
        <item name="android:layout_height">@dimen/thumbnail_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="RCS.Widget.TextView" parent="@android:style/Widget.TextView" />
    <style name="RCS.TextAppearance.List.Primary" parent="@miui:style/TextAppearance.List.Primary" />
    <style name="RCS.TextAppearance.List.Primary.Title" parent="@style/RCS.TextAppearance.List.Primary">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/title_max_lines</item>
    </style>
    <style name="RCSTheme.Dark.ActionBar.NoTitle_Base" parent="@miui:style/Theme.Dark.ActionBar.NoTitle">
        <item name="android:actionBarStyle">@style/RCS.Widget.ActionBar.PhotoPage</item>
        <item name="miui:windowActionBarOverlay">true</item>
    </style>
    <style name="RCS.Widget.ActionBar.PhotoPage" parent="@style/RCS.Widget.ActionBar.DisplayCustom">
        <item name="android:height">50.0dip</item>
    </style>
    <style name="RCS.Widget.ActionBar.DisplayCustom" parent="@style/RCS.Widget.ActionBar">
        <item name="android:displayOptions">showCustom</item>
    </style>
    <style name="RCS.Widget.ActionBar" parent="@miui:style/Widget.ActionBar" />
</resources>
