<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Light.Title.ActionBar" parent="@miui:style/Widget.ActionBar">
        <item name="android:displayOptions">showTitle</item>
    </style>
    <style name="Theme.Light.Main" parent="@miui:style/Theme.Light">
        <item name="android:actionBarStyle">@style/Theme.Light.Title.ActionBar</item>
    </style>
    <style name="Widget.ProgressBar.Button" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:max">100</item>
        <item name="android:indeterminate">false</item>
    </style>
    <style name="TextAppearance.Button.MainAction" parent="@style/TextAppearance.Button">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/action_button_text_dark</item>
    </style>
    <style name="TextAppearance.Button" parent="@miui:style/TextAppearance.Widget.Button" />
    <style name="Passport.TextAppearance.Widget" parent="@style/Passport.TextAppearance" />
    <style name="Passport.TextAppearance.Widget.Button" parent="@style/Passport.TextAppearance.Widget">
        <item name="android:textSize">@dimen/passport_button_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/passport_button_text_light</item>
    </style>
    <style name="Passport.Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:textAppearance">@style/Passport.TextAppearance.Widget.Button</item>
        <item name="android:textColor">@color/passport_button_text_light</item>
        <item name="android:background">@drawable/passport_btn_bg_light</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="Widget.Button" parent="@miui:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Widget.Button.MainAction" parent="@style/Widget.Button">
        <item name="android:textAppearance">@style/TextAppearance.Button.MainAction</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/action_button_text_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_bg_main_action_light</item>
        <item name="android:layout_width">@dimen/main_action_button_width</item>
        <item name="android:layout_height">@dimen/main_action_button_height</item>
    </style>
    <style name="Passport" />
    <style name="Passport.HyperLinkStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/passport_hyperlink_text_color</item>
    </style>
    <style name="Passport.TextAppearance" parent="@style/Passport">
        <item name="android:textSize">@dimen/passport_normal_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/passport_normal_text_light</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">?android:textColorLink</item>
    </style>
    <style name="Passport.TextAppearance.Medium" parent="@style/Passport.TextAppearance">
        <item name="android:textSize">@dimen/passport_normal_text_size</item>
    </style>
    <style name="Passport.TextSecondPrimary" parent="@style/Passport.TextAppearance.Medium">
        <item name="android:textColor">@color/passport_text_color_gray</item>
    </style>
</resources>
