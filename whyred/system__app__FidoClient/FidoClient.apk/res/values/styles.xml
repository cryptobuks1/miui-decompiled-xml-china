<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="ActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/TitleTextTheme</item>
    </style>
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="List_row">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Theme.Transparent" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="TitleTextTheme" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Toolbar">
        <item name="android:background">@drawable/toolbar_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44.0sp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="ToolbarButton">
        <item name="android:background">@drawable/toolbar_background</item>
        <item name="android:layout_width">44.0sp</item>
        <item name="android:layout_height">44.0sp</item>
        <item name="android:scaleType">center</item>
        <item name="android:tint">#ffffffff</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="ToolbarButtonRight" parent="@style/ToolbarButton">
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="WebActivityActionBarTheme" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/TitleTextTheme</item>
    </style>
    <style name="cb_style">
        <item name="android:button">@drawable/cb_selector</item>
    </style>
    <style name="dialog_theme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="entry">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:gravity">center|left</item>
    </style>
    <style name="header">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="header_title">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="maintheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:typeface">sans</item>
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
    </style>
    <style name="tmManageTheme" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="android:typeface">sans</item>
    </style>
</resources>
