<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WeatherFindCityTheme" parent="@miui:style/Theme.Light">
        <item name="miui:windowTranslucentStatus">transparentDark</item>
    </style>
    <style name="WeatherSetCityTheme" parent="@miui:style/Theme.Light">
        <item name="android:actionModeBackground">@android:color/transparent</item>
        <item name="android:actionModeStyle">@style/activity_set_action_mode_style</item>
        <item name="miui:actionModeCancelButtonStyle">@style/action_cancel_buttonStyle</item>
        <item name="miui:actionModeSelectButtonStyle">@style/action_confirm_buttonStyle</item>
        <item name="miui:windowTranslucentStatus">transparentDark</item>
    </style>
    <style name="action_cancel_buttonStyle" parent="@miui:style/Widget.ActionMode.Button" />
    <style name="action_confirm_buttonStyle" parent="@miui:style/Widget.ActionMode.Button.Default" />
    <style name="actionbar_title_text" parent="@miui:style/TextAppearance.WindowTitle" />
    <style name="activity_set_action_mode_style" parent="@miui:style/Widget.ActionMode">
        <item name="android:titleTextStyle">@style/actionbar_title_text</item>
    </style>
    <style name="AddCityButton">
        <item name="android:textSize">@dimen/sharedialog_button_text_size</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="DailyForecastAqiTheme">
        <item name="android:background">@drawable/background_daily_forecast_aqi</item>
        <item name="android:layout_width">@dimen/daily_forecast_item_aqi_width</item>
        <item name="android:layout_height">@dimen/daily_forecast_item_aqi_height</item>
    </style>
    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>
    <style name="ShareDialog_Button">
        <item name="android:textSize">@dimen/sharedialog_button_text_size</item>
        <item name="android:textColor">@color/default_gray_color</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="StyleProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">@dimen/aqi_pollution_item_progress_bar_width</item>
        <item name="android:layout_height">@dimen/aqi_pollution_item_progress_bar_height</item>
        <item name="android:layout_marginTop">@dimen/aqi_pollution_item_progress_bar_layout_margin_top</item>
        <item name="android:max">100</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_good</item>
    </style>
    <style name="ViewModuleTheme">
        <item name="android:background">@drawable/background_module</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/view_module_margin_start_or_end</item>
        <item name="android:layout_marginEnd">@dimen/view_module_margin_start_or_end</item>
    </style>
    <style name="WeatherAlertManagerTheme" parent="@miui:style/Theme.Light">
        <item name="miui:windowTranslucentStatus">transparentDark</item>
    </style>
    <style name="WeatherIndexTheme" parent="@miui:style/Theme.Dark.NoTitle">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="miui:immersionMenuEnabled">true</item>
    </style>
    <style name="WeatherMainTheme" parent="@miui:style/Theme.Dark.NoTitle">
        <item name="android:windowBackground">@color/main_activity_background_color</item>
        <item name="miui:immersionMenuEnabled">true</item>
        <item name="miui:windowTranslucentStatus">transparentDark</item>
    </style>
    <style name="WeatherMinuteRainTheme" parent="@miui:style/Theme.Light">
        <item name="miui:windowTranslucentStatus">transparentDark</item>
    </style>
    <style name="WebViewTheme" parent="@miui:style/Theme.Light">
        <item name="android:homeAsUpIndicator">@drawable/bg_dark_action_bar_back_left</item>
        <item name="miui:immersionMenuEnabled">true</item>
    </style>
    <style name="aqi_pollution_item_desc_text_style">
        <item name="android:textSize">@dimen/aqi_pollution_item_text_size</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2.0px</item>
    </style>
    <style name="aqi_pollution_item_numeric_text_style">
        <item name="android:textSize">@dimen/aqi_pollution_item_numeric_text_size</item>
        <item name="android:textColor">#66000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>
    <style name="aqi_pollution_item_title_text_style">
        <item name="android:textSize">@dimen/aqi_pollution_item_text_size</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="card_title">
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ccffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/card_title_height</item>
        <item name="android:paddingStart">@dimen/card_title_padding_left</item>
    </style>
    <style name="current_condition_click">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">@color/realtime_bracket_default_color</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/activity_main_clickable</item>
    </style>
    <style name="radar_cloud_indicator_text_style">
        <item name="android:textSize">@dimen/radar_cloud_indicator_text_size</item>
        <item name="android:textColor">@color/radar_cloud_gray_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/precipitation_degree_one</item>
        <item name="android:lines">1</item>
    </style>
    <style name="radar_cloud_progress_indicator_split_line_style">
        <item name="android:background">#33000000</item>
        <item name="android:layout_width">1.0px</item>
        <item name="android:layout_height">@dimen/radar_cloud_progress_indicator_split_line_height</item>
    </style>
    <style name="radar_cloud_progress_indicator_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/white_background_button_last_bg_selector</item>
        <item name="android:layout_height">@dimen/radar_cloud_progress_indicator_height</item>
    </style>
    <style name="radar_cloud_progress_indicator_text_style">
        <item name="android:textSize">@dimen/radar_cloud_progress_indicator_text_size</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">@dimen/radar_cloud_progress_indicator_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/minute_rain_progress_indicator_original_time</item>
    </style>
    <style name="weather_feedback_dialog_describe_style">
        <item name="android:textSize">@dimen/weather_feedback_dialog_describe_text_size</item>
        <item name="android:textColor">#ff706f6f</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/weather_feedback_dialog_describe_margin_top</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="weather_feedback_dialog_icon_style">
        <item name="android:background">@drawable/weather_feedback_icon_background_selector</item>
        <item name="android:padding">@dimen/weather_feedback_dialog_icon_padding</item>
        <item name="android:layout_width">@dimen/weather_feedback_dialog_icon_size</item>
        <item name="android:layout_height">@dimen/weather_feedback_dialog_icon_size</item>
    </style>
    <style name="weather_feedback_dialog_space_style">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="white_background_button_style">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/white_background_button_bg_selector</item>
        <item name="android:layout_width">@dimen/white_background_button_size</item>
        <item name="android:layout_height">@dimen/white_background_button_size</item>
    </style>
</resources>
