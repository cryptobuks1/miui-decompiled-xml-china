<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CompassTheme" parent="@miui:style/Theme.Dark.NoTitle">
        <item name="android:windowBackground">@drawable/window_bg</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>
    <style name="TextAppearance">
        <item name="android:textColor">#b2ffffff</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextAppearance.text_unit" parent="@style/TextAppearance">
        <item name="android:textSize">18.0px</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginTop">1.0dip</item>
        <item name="android:layout_marginStart">1.5dip</item>
    </style>
    <style name="TextAppearance.text_title_sign" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/text_title_sign_size</item>
        <item name="android:textColor">#99ffffff</item>
    </style>
    <style name="BottomUnitStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>
</resources>
