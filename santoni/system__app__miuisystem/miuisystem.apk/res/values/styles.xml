<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Light.System" parent="@miui:style/Theme.Light">
        <item name="cloudStateViewStyle">@style/Widget.MiCloudStateView.Light</item>
    </style>
    <style name="Theme.Dark.System" parent="@miui:style/Theme.Dark">
        <item name="cloudStateViewStyle">@style/Widget.MiCloudStateView.Dark</item>
    </style>
    <style name="Widget.MiCloudStateView.Light" parent="@style/Widget.MiCloudStateView" />
    <style name="Widget.MiCloudStateView.Dark" parent="@style/Widget.MiCloudStateView">
        <item name="cloudStatusHighlightTextAppearance">@style/TextAppearance.MiCloudState.Secondary.Highlight.Dark</item>
    </style>
    <style name="Theme.Provision" parent="@miui:style/Theme.Light">
        <item name="android:actionBarStyle">@style/ProvisionActionBarStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/provision_bar_back</item>
        <item name="miui:windowTranslucentStatus">transparentLight</item>
        <item name="miui:windowDisablePreview">true</item>
        <item name="miui:actionBarBackground">@drawable/provision_placeholder</item>
    </style>
    <style name="TextAppearance.MiCloudState.Primary" parent="@miui:style/TextAppearance.List.Primary">
        <item name="android:textSize">@dimen/cloud_state_primary_text_size</item>
    </style>
    <style name="TextAppearance.MiCloudState.Secondary" parent="@miui:style/TextAppearance.List.Secondary">
        <item name="android:textSize">@dimen/cloud_state_secondary_text_size</item>
    </style>
    <style name="TextAppearance.MiCloudState.Secondary.Highlight" parent="@style/TextAppearance.MiCloudState.Secondary" />
    <style name="TextAppearance.MiCloudState.Secondary.Highlight.Light" parent="@style/TextAppearance.MiCloudState.Secondary.Highlight">
        <item name="android:textColor">@color/cloud_status_highlight_text_color_light</item>
    </style>
    <style name="TextAppearance.MiCloudState.Secondary.Highlight.Dark" parent="@style/TextAppearance.MiCloudState.Secondary.Highlight">
        <item name="android:textColor">@color/cloud_status_highlight_text_color_dark</item>
    </style>
    <style name="TextAppearance.MiCloudState.Secondary.Disabled" parent="@style/TextAppearance.MiCloudState.Secondary" />
    <style name="TextAppearance.MiCloudState.Secondary.Disabled.Light" parent="@style/TextAppearance.MiCloudState.Secondary.Disabled">
        <item name="android:textColor">@color/cloud_status_disabled_text_color_light</item>
    </style>
    <style name="TextAppearance.MiCloudState.Secondary.Disabled.Dark" parent="@style/TextAppearance.MiCloudState.Secondary.Disabled">
        <item name="android:textColor">@color/cloud_status_disabled_text_color_dark</item>
    </style>
    <style name="Widget" />
    <style name="Widget.CloudPanel" parent="@style/Widget">
        <item name="android:textSize">@dimen/cloud_panel_text_size</item>
        <item name="android:textColor">@color/cloud_panel_text_light</item>
    </style>
    <style name="Widget.MiCloudStateView" parent="@style/Widget">
        <item name="cloudCountNormalTextAppearance">@style/TextAppearance.MiCloudState.Primary</item>
        <item name="cloudStatusNormalTextAppearance">@style/TextAppearance.MiCloudState.Secondary</item>
        <item name="cloudStatusHighlightTextAppearance">@style/TextAppearance.MiCloudState.Secondary.Highlight.Light</item>
        <item name="cloudStatusDisabledTextAppearance">@style/TextAppearance.MiCloudState.Secondary.Disabled.Light</item>
    </style>
    <style name="VipNameStyle">
        <item name="android:textSize">@dimen/vip_big_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/vip_name_color</item>
    </style>
    <style name="VipTitleStyle">
        <item name="android:textSize">@dimen/vip_tiny_text_size</item>
        <item name="android:textColor">@color/vip_title_color</item>
        <item name="android:background">@drawable/vip_bg_title</item>
    </style>
    <style name="VipIdStyle">
        <item name="android:textSize">@dimen/vip_normal_text_size</item>
        <item name="android:textColor">@color/vip_grey_color</item>
    </style>
    <style name="VipPromptStyle">
        <item name="android:textSize">@dimen/vip_normal_text_size</item>
        <item name="android:textColor">@color/vip_prompt_color</item>
    </style>
    <style name="VipSignStyle">
        <item name="android:textSize">@dimen/vip_normal_text_size</item>
        <item name="android:textColor">@color/vip_grey_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ProvisionActionBarStyle" parent="@miui:style/Widget.ActionBar.Large">
        <item name="android:titleTextStyle">@style/ProvisionActionBarTitleTextStyle</item>
    </style>
    <style name="ProvisionActionBarTitleTextStyle" parent="@android:style/TextAppearance.WindowTitle">
        <item name="android:textSize">23.329987sp</item>
        <item name="android:textColor">#80000000</item>
    </style>
    <style name="Theme.NotificationPanel" parent="@miui:style/Theme.Dark">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
