<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.Compat.Notification" parent="@android:style/TextAppearance.StatusBar.EventContent" />
    <style name="TextAppearance.Compat.Notification.Info" parent="@style/TextAppearance.Compat.Notification">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <style name="TextAppearance.Compat.Notification.Time" parent="@style/TextAppearance.Compat.Notification">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>
    <style name="TextAppearance.Compat.Notification.Title" parent="@android:style/TextAppearance.StatusBar.EventContent.Title" />
    <style name="Widget.Compat.NotificationActionContainer" parent="" />
    <style name="Widget.Compat.NotificationActionText" parent="" />
    <style name="ADTag">
        <item name="android:textSize">@dimen/ad_tag_text_size</item>
        <item name="android:textColor">@color/ad_tag_color</item>
    </style>
    <style name="NoDisplayActivityStyle" parent="@miui:style/Theme.NoDisplay" />
    <style name="SmsCardAirplaneCity">
        <item name="android:textSize">@dimen/card_sms_airplane_city_size</item>
        <item name="android:textColor">@color/sms_card_body_primary</item>
    </style>
    <style name="SmsCardPrimary">
        <item name="android:textSize">@dimen/card_sms_primary_size</item>
        <item name="android:textColor">@color/sms_card_body_primary</item>
    </style>
    <style name="SmsCardSecondary">
        <item name="android:textSize">@dimen/card_sms_secondary_size</item>
        <item name="android:textColor">@color/sms_card_body_secondary</item>
    </style>
    <style name="TextAppearance.Compat.Notification.Line2" parent="@style/TextAppearance.Compat.Notification.Info" />
    <style name="TextAppearance.MessageBody.In.Understand" parent="@miui:style/TextAppearance">
        <item name="android:textSize">@dimen/message_bubble_understand_font_size</item>
        <item name="android:textColor">@color/understand_button_text</item>
        <item name="android:textColorLink">@color/message_highlight_text_in_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Theme.Light.SmsCardDetail" parent="@miui:style/Theme.Light.ActionBar.NoTitle">
        <item name="miui:windowTranslucentStatus">transparentDark</item>
    </style>
</resources>
