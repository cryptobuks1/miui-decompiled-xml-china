<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NavigationBarStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/item_background_normal</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/path_gallery_height</item>
        <item name="android:paddingEnd">@dimen/progress_paddingright</item>
    </style>
    <style name="PathItemTextStyle" parent="@miui:style/TextAppearance.PreferenceCategory">
        <item name="android:textSize">@dimen/path_gallery_text_size</item>
        <item name="android:textColor">@color/text_color_tertiary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/path_gallery_height</item>
        <item name="android:drawablePadding">4.0dip</item>
        <item name="android:drawableEnd">@drawable/arrow_right</item>
        <item name="android:paddingEnd">4.0dip</item>
    </style>
    <style name="ListItemStyle" parent="@miui:style/Widget.ListView.Item.SingleLine">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:paddingTop">12.0dip</item>
        <item name="android:paddingBottom">12.0dip</item>
        <item name="android:layout_height">@dimen/file_item_height</item>
        <item name="android:paddingStart">@dimen/list_item_padding</item>
        <item name="android:paddingEnd">@dimen/list_item_padding</item>
    </style>
    <style name="FileIconStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center|left</item>
        <item name="android:layout_width">@dimen/file_icon_width</item>
        <item name="android:layout_height">@dimen/file_icon_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="MenuListItemNameStyle" parent="@miui:style/TextAppearance.List.Primary">
        <item name="android:textSize">@dimen/file_name_textsize</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="empty_file_list_hint_style" parent="@miui:style/TextAppearance.BlankPage">
        <item name="android:textColor">@color/text_color_tertiary</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:singleLine">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="FileTextAppearance" parent="@miui:style/TextAppearance" />
    <style name="FileTextAppearance.FileName" parent="@miui:style/TextAppearance.List.Primary">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
    <style name="FileTextAppearance.FileOwner" parent="@miui:style/TextAppearance.List.Secondary">
        <item name="android:textSize">@miui:dimen/small_text_size</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>
    <style name="FileTextAppearance.FileSize" parent="@style/FileTextAppearance">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/text_color_tertiary</item>
    </style>
    <style name="FileTextAppearance.FileCount" parent="@style/FileTextAppearance">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/text_color_tertiary</item>
    </style>
    <style name="FileTextAppearance.FilePath" parent="@style/FileTextAppearance">
        <item name="android:textSize">@dimen/file_size_textsize</item>
        <item name="android:textColor">@color/file_path_color</item>
    </style>
    <style name="Theme.Light" parent="@miui:style/Theme.Light">
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>
    <style name="Theme.Light.NoTitle" parent="@miui:style/Theme.Light.NoTitle">
        <item name="android:windowBackground">@drawable/window_background</item>
    </style>
    <style name="NavigationLayout" parent="@miui:style/Widget.NavigationLayout">
        <item name="miui:navigationDivider">@color/navigation_divider_color</item>
    </style>
    <style name="Theme.ViewLarge" parent="@miui:style/Theme.Dark">
        <item name="miui:windowActionBarOverlay">true</item>
        <item name="miui:actionBarMovableLayoutStyle">@miui:style/Widget.ActionBarMovableLayout</item>
        <item name="miui:actionBarSplitBackground">@drawable/bottom_bar</item>
        <item name="miui:actionBarExpandBackground">@drawable/bottom_bar</item>
    </style>
    <style name="midrive_view_fragment_style" parent="@miui:style/Theme.Light">
        <item name="miui:immersionMenuEnabled">true</item>
    </style>
    <style name="Theme.SlideImage" parent="@miui:style/Theme.Dark.NoTitle" />
    <style name="midrive_style" parent="@style/Theme.Light.NoTitle">
        <item name="android:fastScrollThumbDrawable">@drawable/icon_fast_scroll</item>
        <item name="android:fastScrollTrackDrawable">@null</item>
    </style>
    <style name="operation" parent="@style/Theme.Light.NoTitle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="miui:navigationLayoutStyle">@style/NavigationLayout</item>
    </style>
    <style name="Theme.Transparent" parent="@miui:style/Theme.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
