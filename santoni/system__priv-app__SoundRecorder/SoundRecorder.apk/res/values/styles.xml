<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="@miui.system:style/Theme.Light.System">
        <item name="android:actionBarStyle">@style/SoundRecordAtionBarStyle</item>
        <item name="miui:windowTranslucentStatus">transparentDark</item>
    </style>
    <style name="SoundRecorderTheme" parent="@style/BaseTheme">
        <item name="android:windowBackground">@drawable/shape_window_bg</item>
    </style>
    <style name="SoundRecordAtionBarStyle" parent="@miui:style/Widget.ActionBar">
        <item name="android:background">@color/sound_recorder_bg_color</item>
        <item name="android:displayOptions">@null</item>
    </style>
    <style name="ListItemStyle" parent="@miui:style/Widget.ListView.Item.DoubleLine">
        <item name="android:background">@drawable/list_item_bg</item>
        <item name="android:paddingTop">0.0dip</item>
