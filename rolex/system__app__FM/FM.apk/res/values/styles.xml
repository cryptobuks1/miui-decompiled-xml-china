<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FMStationSeekBar">
        <item name="android:focusable">true</item>
        <item name="android:maxHeight">20.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
        <item name="android:minHeight">20.0dip</item>
        <item name="android:thumbOffset">8.0dip</item>
    </style>
    <style name="FMRadioActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:visibility">gone</item>
        <item name="android:displayOptions">none</item>
    </style>
    <style name="FmActivityTheme" parent="@miui:style/Theme.Light.NoTitle">
        <item name="miui:immersionMenuEnabled">true</item>
        <item name="miui:windowTranslucentStatus">transparentDark</item>
        <item name="miui:immersionStatusBarStyle">transparentLight</item>
    </style>
    <style name="FmStationListTheme" parent="@miui:style/Theme.Light">
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/action_bar_back_dark</item>
        <item name="miui:windowTranslucentStatus">transparentDark</item>
    </style>
    <style name="Widget.ActionBar" parent="@miui:style/Widget.ActionBar">
        <item name="android:background">@drawable/screen_background</item>
        <item name="android:titleTextStyle">@style/TextAppearance.WindowTitle</item>
    </style>
    <style name="TextAppearance.WindowTitle" parent="@miui:style/TextAppearance.WindowTitle">
        <item name="android:textColor">@miui:color/white</item>
    </style>
</resources>
