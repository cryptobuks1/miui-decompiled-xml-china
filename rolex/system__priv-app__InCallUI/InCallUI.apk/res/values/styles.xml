<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance" parent="@miui:style/TextAppearance" />
    <style name="InCallAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/incall_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/incall_open_exit</item>
        <item name="android:taskOpenEnterAnimation">@anim/incall_open_enter</item>
        <item name="android:taskOpenExitAnimation">@anim/incall_open_exit</item>
        <item name="android:taskToFrontEnterAnimation">@anim/incall_open_enter</item>
        <item name="android:taskToFrontExitAnimation">@anim/incall_open_exit</item>
        <item name="android:wallpaperOpenEnterAnimation">@anim/incall_open_enter</item>
        <item name="android:wallpaperOpenExitAnimation">@anim/incall_open_exit</item>
    </style>
    <style name="Theme.InCallScreen" parent="@miui:style/Theme.Light.NoTitle">
        <item name="android:windowBackground">@drawable/bg_incall_default</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/InCallAnimationStyle</item>
        <item name="android:colorBackgroundCacheHint">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="miui:windowDisablePreview">true</item>
    </style>
    <style name="DialpadButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/incall_dialer_panel_button_bg</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">@dimen/dial_panel_button_height</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>
    <style name="DialpadButtonLinearStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_width">@dimen/dial_panel_button_line_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Miui" parent="@android:style/Theme.Holo" />
    <style name="Miui.Button" parent="@style/Miui">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:soundEffectsEnabled">false</item>
    </style>
    <style name="Miui.Button.Text" parent="@style/Miui.Button">
        <item name="android:textSize">@dimen/call_button_text_size</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Miui.Button.Tool" parent="@style/Miui.Button">
        <item name="android:ellipsize">end</item>
        <item name="android:padding">0.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minHeight">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Miui.Button.Tool.ToggleButton" parent="@style/Miui.Button.Tool">
        <item name="android:textSize">0.0sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Miui.Button.Tool.ToggleText" parent="@style/Miui.Button.Tool">
        <item name="android:padding">0.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="Miui.TableRow" parent="@style/Miui">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/call_tools_panel_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Miui.TableColumn" parent="@style/Miui">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Miui.Video" parent="@style/Miui">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Miui.Video.Button" parent="@style/Miui.Video">
        <item name="android:ellipsize">start</item>
    </style>
    <style name="Miui.Video.Text" parent="@style/Miui.Video">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextAppearance.Name" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/incoming_caller_name_text_size</item>
        <item name="android:textColor">@color/incoming_caller_name_text_color</item>
        <item name="android:shadowColor">@color/incoming_caller_info_text_shadow_color</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
    </style>
    <style name="TextAppearance.Name.PhoneTag" parent="@style/TextAppearance.Name">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/double_call_name_text_color_normal</item>
    </style>
    <style name="TextAppearance.Info" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/incoming_caller_info_text_size</item>
        <item name="android:textColor">@color/incoming_caller_info_text_color</item>
        <item name="android:shadowColor">@color/incoming_caller_info_text_shadow_color</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
    </style>
    <style name="TextAppearance.PhoneNumber" parent="@style/TextAppearance.Info" />
    <style name="TextAppearance.MarkTitle" parent="@style/TextAppearance.Info" />
    <style name="TextAppearance.ExtraInfo" parent="@style/TextAppearance.Info" />
    <style name="TextAppearance.Telocation" parent="@style/TextAppearance.Info" />
    <style name="SmartCoverTextAppearance" parent="@miui:style/TextAppearance" />
    <style name="SmartCoverTextAppearance.Info" parent="@style/SmartCoverTextAppearance">
        <item name="android:textSize">@dimen/smart_cover_call_info_label_number_text_size</item>
        <item name="android:textColor">@color/smart_cover_incall_call_desp_text_color</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
    </style>
    <style name="SmartCoverTextAppearance.MarkTitle" parent="@style/SmartCoverTextAppearance.Info" />
    <style name="SmartCoverTextAppearance.Telocation" parent="@style/SmartCoverTextAppearance.Info" />
    <style name="SmartCoverTextAppearance.ExtraInfo" parent="@style/SmartCoverTextAppearance.Info" />
    <style name="SmartCoverTextAppearance.CallCardState" parent="@style/SmartCoverTextAppearance.Info" />
    <style name="DoubleCall">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="DoubleCall.CallNameLayout" parent="@style/DoubleCall">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignWithParentIfMissing">true</item>
    </style>
    <style name="DoubleCall.CallName" parent="@style/DoubleCall">
        <item name="android:textSize">@dimen/double_call_name_text_size</item>
        <item name="android:textColor">@color/double_call_name_text_color</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="DoubleCall.SimCardIndicator" parent="@style/DoubleCall">
        <item name="android:layout_marginEnd">@dimen/sim_indicator_margin_end</item>
    </style>
    <style name="DoubleCall.CallState" parent="@style/DoubleCall">
        <item name="android:textSize">@dimen/double_call_desp_text_size</item>
        <item name="android:textColor">@color/double_call_desp_text_color</item>
        <item name="android:layout_alignWithParentIfMissing">true</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="DoubleCall.CallTime" parent="@style/DoubleCall">
        <item name="android:textSize">@dimen/double_call_desp_text_size</item>
        <item name="android:textColor">@color/double_call_desp_text_color</item>
        <item name="android:paddingStart">@dimen/call_tools_text_padding</item>
    </style>
    <style name="DoubleCall.ManagerConference" parent="@style/DoubleCall">
        <item name="android:textSize">@dimen/double_call_name_text_size</item>
        <item name="android:textColor">@color/double_call_name_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_manage_conference_button</item>
        <item name="android:text">@string/call_button_conference_manager_text</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>
    <style name="DoubleCall.ImageView" parent="@style/DoubleCall">
        <item name="android:background">@drawable/bg_incall_phone_hangup_small</item>
        <item name="android:src">@drawable/incoming_reject</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:contentDescription">@string/onscreenEndCallText</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>
    <style name="Incoming" />
    <style name="Incoming.ArrowImageView" parent="@style/Incoming">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/incoming_guide_arrow_margin_bottom</item>
        <item name="android:src">@drawable/guide_incoming_arrow</item>
    </style>
    <style name="Incoming.CircleImageView" parent="@style/Incoming">
        <item name="android:clickable">false</item>
        <item name="android:layout_width">@dimen/incoming_out_radius</item>
        <item name="android:layout_height">@dimen/incoming_out_radius</item>
    </style>
    <style name="Incoming.ResponseSmsImageView" parent="@style/Incoming">
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/incoming_response_delete_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/incoming_response_delete_margin_bottom</item>
        <item name="android:src">@drawable/incoming_exit_message_response</item>
        <item name="android:contentDescription">@string/description_image_button_message_exit</item>
    </style>
    <style name="Incoming.Text" parent="@style/Incoming">
        <item name="android:textSize">@dimen/incoming_circle_text_size</item>
        <item name="android:textColor">@color/incoming_circle_text_color</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Incoming.ButtonColumn" parent="@style/Incoming">
        <item name="android:gravity">bottom|center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="a1_cover_call_info_style">
        <item name="android:textSize">@dimen/a1_cover_call_info_text_size</item>
        <item name="android:textColor">@color/a1_cover_call_info_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="a1_cover_call_divider_style">
        <item name="android:background">@color/a1_cover_call_info_text_color</item>
        <item name="android:layout_width">1.0px</item>
        <item name="android:layout_height">@dimen/a1_cover_call_divider_height</item>
        <item name="android:layout_marginStart">@dimen/a1_cover_call_divider_margin</item>
        <item name="android:layout_marginEnd">@dimen/a1_cover_call_divider_margin</item>
    </style>
</resources>
